<?xml version="1.0" encoding="UTF-8"?>
<persistence
	xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemalocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="synciatePersistenceUnit" transaction-type="RESOURCE_LOCAL">

		<!-- Classes -->
		<class>com.hawkprime.syndicate.model.Feed</class>
		<class>com.hawkprime.syndicate.model.Node</class>
		<class>com.hawkprime.syndicate.model.Post</class>
		<class>com.hawkprime.syndicate.model.Setting</class>
		<class>com.hawkprime.syndicate.model.State</class>
		<class>com.hawkprime.syndicate.model.Update</class>
		<class>com.hawkprime.syndicate.model.User</class>
		<class>com.hawkprime.syndicate.model.Value</class>

		<!-- Mapping Files -->
		<mapping-file>persistenceFeed.xml</mapping-file>

	</persistence-unit>
</persistence>
