<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<Environment name="jdbc/syndicate/dialect" type="java.lang.String"
		value="org.hibernate.dialect.MySQLDialect" />

	<Resource name="jdbc/syndicate/datasource" auth="Container"
		type="javax.sql.DataSource" maxActive="8" maxIdle="2" maxWait="3000"
		username="synd_user" password="synd_pass" driverClassName="com.mysql.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/syndicate" />

</Context>